<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/border2">
        <!--Fechas encabezado-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/horaCreacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginEnd="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Hora creacion"
                android:gravity="end" />
            <TextView
                android:id="@+id/fechaCreacion"
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Fecha creacion"
                android:gravity="start" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtTituloF"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:text="Titulo"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingVertical="5dp"
                    android:maxLines="3"
                    android:ellipsize="end"/>
                <Button
                    android:id="@+id/btnForoVer"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="Ver"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="start"
                    android:backgroundTint="@color/mint2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgPerfilF"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icons8_usuario"/>
                <TextView
                    android:id="@+id/txtUsuarioF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Usuario"
                    android:textColor="@color/black"
                    android:textStyle="italic"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>