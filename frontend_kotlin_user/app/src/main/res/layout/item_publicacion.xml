<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/border2">

        <ImageView
            android:id="@+id/imagenPublicacion"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/img_default"
            android:layout_gravity="center"
            android:background="@drawable/border_image"/>
        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:textStyle="bold"
            android:maxLines="3"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valoración"
            android:paddingVertical="5dp"
            android:textColor="@color/black"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/btnNavigate_to_Publication_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Más"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:backgroundTint="@color/mint2"
            android:paddingVertical="5dp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/vistas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vistas"
                android:textColor="@color/black"
                android:gravity="start" />

            <TextView
                android:id="@+id/horaCreacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hora creacion"
                android:gravity="end"
                android:textColor="@color/black"/>
        </LinearLayout>
        <TextView
            android:id="@+id/fechaCreacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha creacion"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"/>

    </LinearLayout>

</LinearLayout>