<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PublicacionesFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/topNav"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp">

            <!-- Primer LinearLayout con TextView y ImageView -->
            <LinearLayout
                android:id="@+id/nuevo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/search_view_bg"
                android:layout_marginEnd="60dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nuevo"
                    android:layout_marginStart="8dp"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_plus_2"/>
            </LinearLayout>

            <!-- SearchView con layout_weight para ocupar el espacio restante -->
            <SearchView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:queryHint="Buscar"
                android:background="@drawable/search_view_bg"/>
        </LinearLayout>
        <TextView
            android:id="@+id/titlePublicaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/topNav"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:text="PUBLICACIONES"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColorHighlight="@color/white"
            android:textColor="@color/dartmouth_green"/>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/titlePublicaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="20dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPublicaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:text="Welcome to this publications section"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>